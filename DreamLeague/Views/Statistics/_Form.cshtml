@model List<DreamLeague.ViewModels.Form>


<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Form</h3>
    </div>
    <div class="panel-body">
            <table class="table table-hover small">
                <tr>
                    <th class="no-mobile">
                        @Html.Display("Pos")
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => Model[0].Manager)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => Model[0].Text)
                    </th>
                </tr>

                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td class="no-mobile">
                            @(i + 1)
                        </td>
                        <td>                            
                            @Html.ActionLink(Model[i].Manager, "Details", "Manager", new { id = Model[i].ManagerId }, null)
                        </td>
                        <td class="text-nowrap">
                            @foreach (var c in Model[i].Text)
                            {
                                <span class="label @(c == 'W' ? "label-success" : c == 'L' ? "label-danger" : "label-default")"><strong>@Html.DisplayFor(modelItem => c)</strong></span>
                            }
                        </td>
                    </tr>
                }
            </table>
    </div>
</div>

