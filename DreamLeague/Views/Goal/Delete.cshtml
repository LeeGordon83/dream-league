@model DreamLeague.Models.Goal

@{
    ViewBag.Title = "Delete Goal";
}

<h2>Delete Goal</h2>

<h3>Are you sure you want to delete this goal?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.GameWeek.GameWeekId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GameWeek.Number)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Manager.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Manager.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Player.FullName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Player.FullName)
        </dd>

