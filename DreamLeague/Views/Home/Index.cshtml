@model DreamLeague.ViewModels.GameWeekSummary

@{
    ViewBag.Title = "Dream League";
}

<div class="jumbotron">
    <h1>Dream League</h1>

    <p>Private fantasy football league</p>
</div>

@if (Model != null)
{
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Latest Scores - @Model.GameWeek.Title</h3>
                </div>
                <div class="panel-body">
                    @Html.Partial("~/Views/Result/_Scores.cshtml", Model.Scores)
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Table</h3>
                </div>
                <div class="panel-body">
                    @Html.Partial("~/Views/Result/_Table.cshtml", Model.Table)
                </div>
            </div>

            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Winners</h3>
                </div>
                <div class="panel-body">
                    @Html.Partial("~/Views/Result/_Winners.cshtml", Model.Winners)

                    @if (Model.JackPotWinners.Count > 0)
                    {
                        <h4>Jackpot</h4>
                        @Html.Partial("~/Views/Result/_Winners.cshtml", Model.JackPotWinners)
                    }
                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-md-6">
            @{Html.RenderAction("_Form", "Statistics");}
        </div>
        <div class="col-md-6">
            @{Html.RenderAction("_TopGoalScorer", "Statistics");}
        </div>
    </div>

    
        {Html.RenderAction("_CupResults", "Result", new { gameWeekId = Model.GameWeek.GameWeekId });}
    
            }
            else
            {
                <div class="alert alert-info">
                    New season coming soon...
                </div>
            }

<div class="row">
    <div class="col-md-6">
        @{Html.RenderAction("_NextMeeting", "Meeting");}
    </div>
    <div class="col-md-6">

        <h2>Learn from the Legends</h2>
        <blockquote class="blockquote-reverse">
            <p>If history repeats itself, I think we should expect the same thing again.</p>
            <small>Terry Venables</small>
        </blockquote>
        <blockquote class="blockquote-reverse">
            <p>They're the second best team in the world, and there's no higher praise than that.</p>
            <small>Kevin Keegan</small>
        </blockquote>
        <blockquote class="blockquote-reverse">
            <p>The first ninty minutes of a football match are the most important.</p>
            <small>Bobby Robson</small>
        </blockquote>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        @Html.Partial("_External")
    </div>
    <div class="col-md-6">
        @Html.Partial("_Finances")
    </div>
</div>

